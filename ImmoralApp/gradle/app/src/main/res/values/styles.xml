<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- toolbar style -->
    <style name="myAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/action_bar_color</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="actionMenuTextColor">@android:color/darker_gray</item>
        <item name="actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/overflow_menu</item>
    </style>

</resources>
